<div class="global-wrapper" data-behaviour="FragmentHandler">
  <div class="global-inner">
    {{#siteHeader}}
      {{> organisms-site-header }}
    {{/siteHeader}}

    <main role="main" class="blg-margin-bottom-large">

      <article class="article">

        {{#contentHeader}}
          {{> organisms-pl-only-content-header-article}}
        {{/contentHeader}}

        {{#contextualData}}
          <div class="wrapper">
          {{> molecules-contextual-data }}
          </div>
        {{/contextualData}}

        <div class="wrapper">

          <div class="grid">

            <div class="grid__item large--two-twelfths blg-pad-top-medium">
              {{#viewSelector}}
                {{> molecules-view-selector }}
              {{/viewSelector}}
            </div>

            <div class="grid__item large--six-twelfths blg-pad-top-medium" data-behaviour="FragmentHandler">
              <div data-behaviour="DelegateBehaviour" data-delegate-behaviour="ReferencePopup" data-selector="a">
              {{#articleSections}}
                {{> molecules-article-section }}
              {{/articleSections}}
              </div>

              {{#iframe}}
                {{!> atoms-iframe }}
              {{/iframe}}

              {{! Decided this will be content, serverside }}
              {{#pl-only-article-section-for-download-links}}
                {{> molecules-pl-only-article-section-for-download-links}}
              {{/pl-only-article-section-for-download-links}}

              <section class="article-section" data-behaviour="ArticleSection">
                <header class="article-section__header">
                  <h2 class="article-section__header_text">References</h2>
                </header>
                <div class="article-section__body">
                  {{> molecules-reference-list }}
                </div>
              </section>

              {{! May need to make the article section pattern more content flexible (include other patterns/not have header). New variants? }}
              {{#articleMeta}}
                <section class="article-section">

                  <div class="article-section__body">
                    {{> molecules-article-meta }}
                  </div>

                </section>
              {{/articleMeta}}

            </div>

          </div>

        </div>

      </article>

    </main>

    <div class="wrapper">

      <div class="grid">

        <div class="grid__item large--eight-twelfths push--large--two-twelfths blg-pad-bottom-large blg-pad-top-medium">
          {{#furtherReading}}
            {{> organisms-listing-read-more }}
          {{/furtherReading}}
        </div>
      </div>
    </div>

    {{#emailCta}}
    {{> organisms-email-cta }}
    {{/emailCta}}

    {{> organisms-footer }}
  </div> {{! /.global-inner }}
</div> {{! /.global-wrapper }}
