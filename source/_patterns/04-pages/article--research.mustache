<div class="global-wrapper">
  <div class="global-inner">
    {{#siteHeader}}
      {{> organisms-site-header }}
    {{/siteHeader}}

    <main role="main">

      <article class="article">

        {{#contentHeader}}
          {{> organisms-pl-only-content-header-article}}
        {{/contentHeader}}

        {{#contextualData}}
          <div class="wrapper">
          {{> molecules-contextual-data }}
          </div>
        {{/contextualData}}

        <div class="wrapper">

          <div class="grid">

            <div class="grid__item large--two-twelfths blg-pad-top-large">
              {{> molecules-view-selector }}
            </div>

            <div class="grid__item large--six-twelfths blg-pad-top-large">

              {{#articleSections}}
                {{> molecules-article-section }}
              {{/articleSections}}

              {{#iframe}}
                {{!> atoms-iframe }}
              {{/iframe}}

              <!-- Decided this will be content, serverside -->
              {{#pl-only-article-section-for-download-links}}
                {{> molecules-pl-only-article-section-for-download-links}}
              {{/pl-only-article-section-for-download-links}}

              <!-- May need to make the article section pattern more content flexible (include other patterns/not have header). New variants? -->
              <section class="article-section">

                <div class="article-section__body">
                  {{> molecules-article-meta }}
                </div>

              </section>
            </div>

          </div>

        </div>

      </article>

    </main>

    {{> organisms-email-cta }}

    {{> organisms-footer }}
  </div> <!-- /.global-inner -->
</div> <!-- /.global-wrapper -->
