<div class="global-wrapper">
  <div class="global-inner">
    {{#siteHeader}}
      {{> organisms-site-header }}
    {{/siteHeader}}

    <main role="main">

      <article class="article">

        <div class="wrapper">
        {{#contentHeader}}
          {{> organisms-pl-only-content-header-research-article}}
        {{/contentHeader}}
        </div>

        <div class="wrapper">
        {{> molecules-contextual-data }}
        </div>

        <div class="wrapper">

          <div class="grid">

            <div class="grid__item large--two-twelfths u-pad-top-lg">
              {{> molecules-view-selector }}
            </div>

            <div class="grid__item large--six-twelfths u-pad-top-lg">

              {{#articleSections}}
                {{> molecules-article-section }}
              {{/articleSections}}

              {{#iframe}}
                {{> atoms-iframe }}
              {{/iframe}}

              <!-- May need to make the article section pattern more content flexible (include other patterns/not have header). New variants? -->
              <section class="article-section">

                <div class="article-section__body">
                  {{> molecules-article-meta }}
                </div>

              </section>
            </div>

          </div>

        </div>

      </article>

    </main>

    {{> organisms-email-cta }}

    {{> organisms-footer }}
  </div> <!-- /.global-inner -->
</div> <!-- /.global-wrapper -->
