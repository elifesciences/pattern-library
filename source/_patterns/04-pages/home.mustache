<div class="global-wrapper">
  <div class="global-inner">
    {{#siteHeader}}
      {{> organisms-site-header }}
    {{/siteHeader}}

    <main role="main" class="main blg-margin-bottom-large">

      {{#carousel}}
        {{> organisms-carousel}}
      {{/carousel}}

      {{#leadParas}}
        <div class="wrapper">
          {{> molecules-lead-paras}}
        </div>
      {{/leadParas}}

      {{#sectionsListingLink}}
      <div class="wrapper">
        {{> atoms-section-listing-link}}
      </div>
      {{/sectionsListingLink}}

      <div class="wrapper u-pad-top">
        <div class="listing-column-container">
          <div style="height: 800px; background-color: rgba(2, 136, 209, 0.2);">Main article list.</div>
        </div>
      </div>


      {{#sectionsListing}}
        <div class="wrapper u-pad-top-lg">
          {{> molecules-section-listing}}
        </div>
      {{/sectionsListing}}

    </main>

    {{#emailCta}}
    {{> organisms-email-cta }}
    {{/emailCta}}

    {{> organisms-footer }}
  </div> {{! /.global-inner }}
</div> {{! /.global-wrapper }}
