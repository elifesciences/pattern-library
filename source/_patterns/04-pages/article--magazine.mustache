<div class="global-wrapper" data-item-type="research-article">
  <div class="global-inner">
    <div class="wrapper wrapper--site-header">
      {{#siteHeader}}
        {{> organisms-site-header }}
      {{/siteHeader}}
    </div>
    <main role="main" class="main blg-margin-bottom-large" id="maincontent">

      {{#contentHeader}}
        {{> organisms-content-header}}
      {{/contentHeader}}

      {{#contextualData}}
        <div class="wrapper">
        {{> molecules-contextual-data }}
        </div>
      {{/contextualData}}

      <div class="wrapper wrapper--content">

          <div class="grid">

            <div class="grid__item large--two-twelfths blg-pad-top-medium">
              {{> molecules-view-selector }}
            </div>

            <div class="{{> pages-pl-only-grid-content-page-main-col-css-classes}} blg-pad-top-medium">

              {{#articleSections}}
                {{> molecules-article-section }}
              {{/articleSections}}

              {{#iframe}}
                {{> atoms-iframe }}
              {{/iframe}}

              {{! Decided this will be content, serverside }}
              {{#pl-only-article-section-for-download-links}}
                {{> molecules-pl-only-article-section}}
              {{/pl-only-article-section-for-download-links}}

              {{! May need to make the article section pattern more content flexible (include other patterns/not have header). New variants? }}
              <section class="article-section">
                  {{> molecules-article-meta }}
              </section>
            </div>

          </div>

        </div>

      </article>

    </main>

    {{#emailCta}}
    {{> organisms-email-cta }}
    {{/emailCta}}

    {{> organisms-footer }}
  </div> {{! /.global-inner }}
</div> {{! /.global-wrapper }}
