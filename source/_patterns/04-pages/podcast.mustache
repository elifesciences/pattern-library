<div class="global-wrapper">

  <div class="global-inner">

    {{#siteHeader}}
      {{> organisms-site-header }}
    {{/siteHeader}}

    <main role="main">

    {{#contentHeader}}
      {{> organisms-pl-only-content-header-non-article-basic-with-strapline-cta-meta-background-image}}
    {{/contentHeader}}

    {{#audioPlayer}}
      {{> molecules-audio-player}}
    {{/audioPlayer}}


    <div class="wrapper">

      <div class="grid">

        <div class="listing-column-container">

          <div class="grid__item large--eight-twelfths listing-column-main">

            {{#mainTeasers}}

              {{> atoms-list-heading}}
              <ol class="listing-list">
                {{#items}}
                  <li class="listing-list__item">
                    {{> molecules-pl-only-teaser-chapter-listing-item}}
                  </li>
                {{/items}}
              </ol>

            {{/mainTeasers}}

          </div>

          <div class="grid__item large--four-twelfths listing-column-secondary">

            {{#multimediaTeasers}}

              {{> atoms-list-heading}}
              <ol class="listing-list">
                {{#items}}
                  <li class="listing-list__item">
                    {{> molecules-pl-only-teaser-secondary }}
                  </li>
                {{/items}}
              </ol>

            {{/multimediaTeasers}}

            {{#relatedTeasers}}

              {{> atoms-list-heading}}
              <ol class="listing-list">
                {{#items}}
                  <li class="listing-list__item">
                    {{> molecules-pl-only-teaser-secondary }}
                  </li>
                {{/items}}
              </ol>

            {{/relatedTeasers}}

            {{#boilerplate}}
              {{> molecules-mini-section}}
            {{/boilerplate}}

          </div>

        </div>

      </div>

    </div>

  </main>

  {{> organisms-email-cta }}

  {{> organisms-footer }}

  </div>

</div>
