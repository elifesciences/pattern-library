<div class="global-wrapper">

  <div class="global-inner">

    <div class="wrapper wrapper--site-header">
      {{#siteHeader}}
        {{> organisms-site-header }}
      {{/siteHeader}}
    </div>

    <main role="main" class="main">

    {{#contentHeader}}
      {{> organisms-content-header}}
    {{/contentHeader}}

    <div class="wrapper">

      <div class="grid">

        <div class="listing-column-container">

          <div class="grid__item large--eight-twelfths listing-column-main">

            {{#mainTeasers}}

              {{> atoms-list-heading}}
              <ol class="listing-list">
                {{#items}}
                  <li class="listing-list__item">
                    {{> molecules-media-chapter-listing-item}}
                  </li>
                {{/items}}
              </ol>

            {{/mainTeasers}}

          </div>

          <div class="grid__item large--four-twelfths listing-column-secondary">

            {{#multimediaTeasers}}

              {{> atoms-list-heading}}
              <ol class="listing-list">
                {{#items}}
                  <li class="listing-list__item">
                    {{> molecules-pl-only-teaser-secondary }}
                  </li>
                {{/items}}
              </ol>

            {{/multimediaTeasers}}

            {{#relatedTeasers}}

              {{> atoms-list-heading}}
              <ol class="listing-list">
                {{#items}}
                  <li class="listing-list__item">
                    {{> molecules-pl-only-teaser-secondary }}
                  </li>
                {{/items}}
              </ol>

            {{/relatedTeasers}}

            {{#boilerplate}}
              {{> molecules-mini-section}}
            {{/boilerplate}}

          </div>

        </div>

      </div>

    </div>

  </main>

  {{#emailCta}}
    {{> organisms-email-cta }}
  {{/emailCta}}

  {{> organisms-footer }}

  </div>

</div>
