<div class="global-wrapper">
  <div class="global-inner">
    <div class="wrapper wrapper--site-header">
      {{#siteHeader}}
        {{> organisms-site-header }}
      {{/siteHeader}}
    </div>

    <main role="main" class="main blg-margin-bottom-large" id="maincontent">

      <article class="article">

        {{#contentHeader}}
          {{> organisms-content-header}}
        {{/contentHeader}}

        {{#contextualData}}
          <div class="wrapper">
            {{> molecules-contextual-data }}
          </div>
        {{/contextualData}}

        <div class="wrapper">

          <div class="grid">

            <div class="grid__item large--two-twelfths blg-pad-top-medium">
              {{#viewSelector}}
                {{> molecules-view-selector }}
              {{/viewSelector}}
            </div>

            <div class="grid__item large--ten-twelfths push--large--one-twelfth x-large--eight-twelfths push--x-large--zero blg-pad-top-medium blg-pad-top-medium">

              {{#figures}}
                {{>molecules-pl-only-article-section}}
              {{/figures}}

              {{#additional-files}}
                {{>molecules-pl-only-article-section}}
              {{/additional-files}}

            </div>

          </div>

        </div>

      </article>

    </main>

    {{#emailCta}}
      {{> organisms-email-cta }}
    {{/emailCta}}

    {{> organisms-footer }}
  </div> {{! /.global-inner }}
</div> {{! /.global-wrapper }}
