<div class="global-wrapper" data-behaviour="FragmentHandler">
  <div class="global-inner">
    <div class="wrapper wrapper--site-header">
      {{#siteHeader}}
        {{> organisms-site-header }}
      {{/siteHeader}}
    </div>

    <main role="main" class="main blg-margin-bottom-large">

      <article class="article">

        {{#contentHeader}}
          {{> organisms-content-header}}
        {{/contentHeader}}

        {{#contextualData}}
          <div class="wrapper">
            {{> molecules-contextual-data }}
          </div>
        {{/contextualData}}

        <div class="wrapper">

          <div class="grid">

            <div class="grid__item large--two-twelfths blg-pad-top-medium">
              {{#viewSelector}}
                {{> molecules-view-selector }}
              {{/viewSelector}}
            </div>

            <div class="grid__item large--eight-twelfths blg-pad-top-medium" data-behaviour="FragmentHandler">

              {{#assets}}
                {{>organisms-asset-viewer-inline}}
              {{/assets}}

            </div>

          </div>

        </div>

      </article>

    </main>

    {{#emailCta}}
      {{> organisms-email-cta }}
    {{/emailCta}}

    {{> organisms-footer }}
  </div> {{! /.global-inner }}
</div> {{! /.global-wrapper }}
