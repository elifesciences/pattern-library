<header class="site-header clearfix" data-behaviour="SiteHeader" id="siteHeader">
  <div class="site-header__title clearfix" role="banner">
    <a href="{{homePagePath}}" class="site-header__logo_link">
      <picture class="site-header__logo_link_image">
        {{! 45.625em is 730px, which is $bkpt-site--medium }}
        <source srcset="{{#assetRewrite}}{{assetsPath}}/img/patterns/organisms/elife-logo-full.svg{{/assetRewrite}}" type="image/svg+xml" media="(min-width: 45.625em)" sizes="136">
        <source srcset="{{#assetRewrite}}{{assetsPath}}/img/patterns/organisms/elife-logo-symbol.svg{{/assetRewrite}}" type="image/svg+xml">
        <img src="{{#assetRewrite}}{{assetsPath}}/img/patterns/organisms/elife-logo-symbol-1x.png{{/assetRewrite}}" alt="eLife logo" class="site-header__logo_link"/>
      </picture>
      <span class="visuallyhidden" >eLife home page</span>
    </a>
  </div>
  <div class="site-header__navigation" role="navigation" aria-label="Main navigation">

    {{#secondaryLinks}}
      {{> molecules-site-header-nav-bar }}
    {{/secondaryLinks}}

    {{#primaryLinks}}
      {{> molecules-site-header-nav-bar }}
    {{/primaryLinks}}

  </div>

  {{#searchBox}}
    {{> molecules-search-box}}
  {{/searchBox}}

</header>
