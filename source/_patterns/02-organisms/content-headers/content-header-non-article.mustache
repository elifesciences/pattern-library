<header class="content-header
      {{#rootClasses}}{{rootClasses}}{{/rootClasses}}"
    {{#behaviour}} data-behaviour="{{behaviour}}"{{/behaviour}}
    {{#backgroundImage}}
          data-low-res-image-source="{{lowResImageSource}}"
          data-high-res-image-source="{{highResImageSource}}"
    {{/backgroundImage}}>


  {{#hasProfile}}
    <div class="content-header__top">
      <a class="content-header__top_info" href="{{{profile.link}}}">
        <dl>
          <dt class="content-header__top_label">Curated by</dt>
          <dd class="content-header__top_data">{{profile.name}}</dd>
        </dl>
      </a>
    </div>
  {{/hasProfile}}

  {{! Used for the Podcast download link }}
  {{#download}}
    <a href="{{{downloadLink}}}" class="content-header__download_link">
      {{> atoms-picture}}
      <span class="visuallyhidden">Download</span>
    </a>
  {{/download}}

  <div class="content-header__inner">
    <div class="content-header__hgroup">
      <h2 class="content-header__title {{titleClass}}">{{{title}}}</h2>
      {{#strapline}}
        <div class="content-header__strapline">{{{strapline}}}</div>
      {{/strapline}}
    </div>
  </div> <!--  /.content-header__inner -->

  {{#hasCtaOrMeta}}
    <div class="content-header__bottom">
      <div class="content-header__cta">
        {{! Expect atoms-button and the form element to be mutually exclusive. }}
      {{#button.text}}
        {{#button}}
          {{>atoms-button}}
        {{/button}}
      {{/button.text}}
      {{#selectNav}}
        {{> molecules-select-nav}}
      {{/selectNav}}
      </div>
      {{#meta}}
        {{> molecules-meta}}
      {{/meta}}
    </div>
  {{/hasCtaOrMeta}}

  <div class="content-header__bottom_line"></div>
</header>
