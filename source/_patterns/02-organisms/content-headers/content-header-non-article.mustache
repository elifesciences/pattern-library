<header class="content-header
    {{#rootClasses}}{{rootClasses}}{{/rootClasses}}"
  {{#behaviour}} data-behaviour="{{behaviour}}"{{/behaviour}}
  {{#backgroundImage}}
        {{#thresholdWidth}}data-threshold-width="{{thresholdWidth}}"{{/thresholdWidth}}
        data-low-res-image-source="{{lowResImageSource}}"
        data-high-res-image-source="{{highResImageSource}}"
  {{/backgroundImage}}>

  {{#hasProfile}}
    <div class="content-header__top">
      {{#profile.url}}
      <a class="content-header__top_info{{#profile.image}} content-header__top_info--has-image{{/profile.image}}" href="{{profile.url}}">
      {{/profile.url}}
      {{^profile.url}}
      <span class="content-header__top_info{{#profile.image}} content-header__top_info--has-image{{/profile.image}}">
      {{/profile.url}}
        {{#profile.image}}
          <picture>
            {{#sources}}
              <source srcset="{{srcset}}"
                {{#type}}type="{{type}}"{{/type}}
                {{#media}}media="{{media}}"{{/media}}>
            {{/sources}}
            {{#fallback}}
              <img src="{{defaultPath}}"
                {{#srcset}}srcset="{{srcset}}"{{/srcset}}
                alt="Avatar for profile of {{profile.name}}"
                class="content-header__top_image">
            {{/fallback}}
          </picture>
        {{/profile.image}}
        <dl>
          <dt class="content-header__top_label">Curated by</dt>
          <dd class="content-header__top_data">{{profile.name}}</dd>
        </dl>
      {{#profile.url}}
      </a>
      {{/profile.url}}
      {{^profile.url}}
      </span>
      {{/profile.url}}
    </div>
  {{/hasProfile}}

  {{! Used for the Podcast download link }}
  {{#download}}
    <a href="{{download}}" class="content-header__download_link">
      <picture>
        {{#hasBackground}}
          <source srcset="{{#assetRewrite}}{{assetsPath}}/img/icons/download-full-reverse.svg{{/assetRewrite}} 88w" sizes="(min-width: 35em) 88px" type="image/svg+xml" media="(min-width: 35em)">
          <source srcset="{{#assetRewrite}}{{assetsPath}}/img/icons/download-full-reverse-2x.png{{/assetRewrite}} 88w" sizes="(min-width: 35em) 88px" type="image/png" media="(min-width: 35em)">
          <source srcset="{{#assetRewrite}}{{assetsPath}}/img/icons/download-reverse.svg{{/assetRewrite}} 20w" sizes="20px" type="image/svg+xml">
          <img src="{{#assetRewrite}}{{assetsPath}}/img/icons/download-full-reverse-1x.png{{/assetRewrite}}" class="content-header__download_icon" alt="Download icon">
        {{/hasBackground}}
        {{^hasBackground}}
          <source srcset="{{#assetRewrite}}{{assetsPath}}/img/icons/download-full.svg{{/assetRewrite}} 88w" sizes="(min-width: 35em) 88px" type="image/svg+xml" media="(min-width: 35em)">
          <source srcset="{{#assetRewrite}}{{assetsPath}}/img/icons/download-full-2x.png{{/assetRewrite}} 88w" sizes="(min-width: 35em) 88px" type="image/png" media="(min-width: 35em)">
          <source srcset="{{#assetRewrite}}{{assetsPath}}/img/icons/download.svg{{/assetRewrite}} 20w" sizes="20px" type="image/svg+xml">
          <img src="{{#assetRewrite}}{{assetsPath}}/img/icons/download-full-1x.png{{/assetRewrite}}" class="content-header__download_icon" alt="Download icon">
        {{/hasBackground}}
      </picture>
      <span class="visuallyhidden">Download</span>
    </a>
  {{/download}}

  <div class="content-header__inner">
    <div class="content-header__hgroup">
      <h1 class="content-header__title {{titleClass}}">{{{title}}}</h1>
      {{#strapline}}
        <div class="content-header__strapline">{{{strapline}}}</div>
      {{/strapline}}
    </div>
  </div> {{!  /.content-header__inner }}

  {{#hasCtaOrMeta}}
    <div class="content-header__bottom">
      <div class="content-header__cta">
        {{! Expect atoms-button and the form element to be mutually exclusive. }}
        {{#button.text}}
          {{#button}}
            {{>atoms-button}}
          {{/button}}
        {{/button.text}}
        {{#selectNav}}
          {{> molecules-select-nav}}
        {{/selectNav}}
      </div>
      {{#meta}}
        {{> molecules-meta}}
      {{/meta}}
    </div>
  {{/hasCtaOrMeta}}

</header>

<div class="content-header-divider"></div> {{! The shame! }}
