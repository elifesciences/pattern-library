<header class="content-header-profile">

  <h1 class="content-header-profile__displayName">{{{displayName}}}</h1>

  {{#details}}
  <div class="content-header-profile__details">

    {{#affiliations}}
    <div>{{{.}}}</div>
    {{/affiliations}}
    {{#emailAddresses}}
    <div class="content-header-profile__email">{{{.}}}</div>
    {{/emailAddresses}}

  </div>
  {{/details}}

  <nav class="content-header-profile__nav">
    <ul class="content-header-profile__links">
      {{#miscLinks}}
        <li><a href="{{uri}}" class="content-header-profile__link" >{{text}}</a></li>
      {{/miscLinks}}
      <li><a href="{{logoutLink.uri}}" class="content-header-profile__link content-header-profile__link--logout" >{{logoutLink.text}}</a></li>
    </ul>
  </nav>

</header>
