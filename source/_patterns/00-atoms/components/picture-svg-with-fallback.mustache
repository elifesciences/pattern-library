<picture>

  {{! include more than one variant if image load to be controlled by the optional media statement. }}

  {{#variants}}

    <source srcset="{{svg}}"
            type="image/svg+xml"
            {{#media}}media="{{media}}"{{/media}} />

  {{/variants}}

    <img srcset="{{fallbackSrcset}}"
       src="{{defaultImage}}"
       {{#classes}}class="{{classes}}"{{/classes}}
       alt="{{alt}}" />

</picture>
