<div class="visuallyhidden" aria-hidden="true">

  {{#label}}
    <label for="{{id}}" class="form-label">{{labelText}}</label>
  {{/label}}
  <input
      type="{{inputType}}"
      class="text-field text-field--{{inputType}}"
    {{#id}} id="{{id}}"{{/id}}
    {{#name}} name="{{name}}"{{/name}}
    {{#value}} value="{{value}}"{{/value}}
      tabindex="-1"
  />

</div>
