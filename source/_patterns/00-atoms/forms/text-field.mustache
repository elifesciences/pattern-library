<div class="form-item{{#state}} form-item--{{state}}{{/state}}">

  {{#label}}
    <label
        for="{{id}}"
        class="form-item__label{{#isVisuallyHidden}} visuallyhidden{{/isVisuallyHidden}}">
      {{labelText}}
    </label>
  {{/label}}
  <input
      type="{{inputType}}"
      class="text-field text-field--{{inputType}}{{#variant}} text-field--{{variant}}{{/variant}}"
    {{#id}} id="{{id}}"{{/id}}
    {{#name}} name="{{name}}"{{/name}}
    {{#autofocus}} autofocus{{/autofocus}}
    {{#value}} value="{{value}}"{{/value}}
    {{#required}} required="required"{{/required}}
    {{#disabled}} disabled="disabled"{{/disabled}}
    {{#placeholder}} placeholder="{{placeholder}}"{{/placeholder}}
    {{#isInvalid}} aria-invalid="true"{{/isInvalid}}
    {{#messageGroup}} aria-describedby="{{id}}"{{/messageGroup}}
  >

  {{#messageGroup}}
  <div class="form-item__message_group" id="{{id}}">

    {{#helpText}}
      <div class="form-item__info">{{{infoMessage}}}</div>
    {{/helpText}}

    {{#message}}
      <div class="form-item__message">{{{errorMessage}}}</div>
    {{/message}}

  </div>
  {{/messageGroup}}

</div>
