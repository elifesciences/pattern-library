<div class="form-item{{#state}} form-item--{{state}}{{/state}}">

  {{#label}}
    <label for="{{id}}"
           class="form-item__label{{#isVisuallyHidden}} visuallyhidden{{/isVisuallyHidden}}">
      {{labelText}}
    </label>
  {{/label}}
  <select class="select{{#state}} select--{{state}}{{/state}}"
    {{#id}} id="{{id}}"{{/id}}
    {{#name}} name="{{name}}"{{/name}}
    {{#autofocus}} autofocus{{/autofocus}}
    {{#required}} required="required"{{/required}}
    {{#disabled}} disabled="disabled"{{/disabled}}
    {{#isInvalid}} aria-invalid="true"{{/isInvalid}}
    {{#messageGroup}} aria-describedby="{{id}}"{{/messageGroup}}
  >

    {{#options}}
      <option value="{{value}}" {{#selected}}selected{{/selected}}>{{displayValue}}</option>
    {{/options}}
  </select>

  {{#messageGroup}}
    <div id="{{id}}">

      {{#infoMessage}}
        <div class="form-item__message form-item__message--info">{{{.}}}</div>
      {{/infoMessage}}

      {{#isInvalid}}
        {{#errorMessage}}
          <div class="form-item__message form-item__message--invalid">{{{.}}}</div>
        {{/errorMessage}}
      {{/isInvalid}}

    </div>
  {{/messageGroup}}
</div>
