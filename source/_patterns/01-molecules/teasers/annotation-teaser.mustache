<article class="annotation-teaser">

  <a href="{{inContextUri}}" class="annotation-teaser__link">

  {{#document}}
    <div class="annotation-teaser__document">
      {{{.}}}
    </div>
  {{/document}}

  {{#highlight}}
    <blockquote class="annotation-teaser__highlight">
      {{{.}}}
    </blockquote>
  {{/highlight}}

  {{#content}}
    <div class="annotation-teaser__content">
      {{{.}}}
    </div>
    {{#isReply}}
      <div class="annotation-teaser__reply">
        This is a reply. <span class="annotation-teaser__reply_cta">View the full conversation &#187;</span>
      </div>
    {{/isReply}}
  {{/content}}

    <footer class="annotation-teaser__footer">

      {{#meta}}
        {{> molecules-meta}}
      {{/meta}}

    </footer>

  </a>

</article>
