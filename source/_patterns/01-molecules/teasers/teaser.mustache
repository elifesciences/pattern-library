<div class="teaser{{#rootClasses}} {{rootClasses}}{{/rootClasses}}">

  {{! These are usually links to major subject areas, but could be unlinked text expressing a relationship,
       e.g. 'Built upon by'}}
  {{#contextLabel}}
    <ol class="teaser__context_label_list">
      {{#list}}
        <li class="teaser__context_label_list_item">
          {{#url}}
            <a href="{{url}}" class="teaser__context_label_link"><span class="teaser__context_label">{{{name}}}</span></a>
          {{/url}}

          {{^url}}
            <span class="teaser__context_label">{{{name}}}</span>
          {{/url}}
        </li>
      {{/list}}
    </ol>
  {{/contextLabel}}

  {{! Used for the date in an event teaser. Different enough from the date in the meta section, that it
      gets its own block.}}
  {{#eventDate}}
    <div>{{>atoms-date}}</div>
  {{/eventDate}}

  <header class="teaser__header">
    <!-- For yaml: image is a dependency of url -->
    {{! Image is either:
          - prominent: full width, above non-article teasers
          - big: full width when viewport narrow, maxing out at 250px wide and floating right as viewport widens
          - small: 70px square image, floating right.
        }}
    {{#image}}
      <a href="{{{url}}}">
        <img src="{{defaultPath}}"
             alt="{{altText}}"
             {{#srcset}}srcset="{{srcset}}"{{/srcset}}
             class="teaser__img{{#classes}} {{classes}}{{/classes}}" />
      </a>
    {{/image}}

    <h4 class="teaser__header_text">
      {{! Occasionally the title isn't linked, for example in the podcast item teaser. }}
      {{#url}}
        <a href="{{{url}}}" class="teaser__header_text_link">{{{title}}}</a>
      {{/url}}
      {{^url}}
        {{{title}}}
      {{/url}}
    </h4>

    {{! secondaryInfo may be a source, an author, something else.}}
    {{#secondaryInfo}}
    <div class="teaser__secondary_info">
      {{{secondaryInfo}}}
    </div>
    {{/secondaryInfo}}

  </header>

  {{! content could be the impact statement, for example.}}
  {{#content}}
  <div class="teaser__body">
    {{{content}}}
  </div>
  {{/content}}

  {{! Several things may appear in the footer:
      - meta: standard pattern for article type and/or date
      - publishState: icons representing poa pdf only, or full html in addition is available. Used for research content
      - download icon/link: used to download e.g. podcasts.
   }}
  {{#footer}}
  <footer class="teaser__footer">

    {{#meta}}
      {{> molecules-meta}}
    {{/meta}}

    {{#publishState}}
    <div class="teaser__publish_state">

      {{^vor}}
        <img
            class="teaser__publish_state--poa"
            src="../../assets/img/icons/poa-1x.png"
            srcset="../../assets/img/icons/poa-2x.png 40w, ../../assets/img/icons/poa-1x.png 20w"
            alt="Available as authors' accepted manuscript" />
      {{/vor}}

      {{#vor}}
        <img
            class="teaser__publish_state--vor"
            src="../../assets/img/icons/vor-1x.png"
            srcset="../../assets/img/icons/vor-2x.png 40w, ../../assets/img/icons/vor-1x.png 20w"
            alt="Available as full, typeset article" />
      {{/vor}}

    </div>
    {{/publishState}}

    {{#downloadSrc}}
      <a href="{{downloadSrc}}" class="teaser__download"><span class="visuallyhidden">Download</span></a>
    {{/downloadSrc}}

  </footer>
  {{/footer}}
</div>
