<div class="teaser teaser--non-article-content">
    <header class="teaser__header">
      {{#image}}
      <a href="{{link}}" class="teaser__link">
         <img src="{{defaultPath}}" srcset="{{srcset}}" class="teaser__header_img" alt="{{altText}}" />
      </a>
      {{/image}}
      <h4 class="teaser__header_text"><a href="{{link}}" class="teaser__link">{{{headerText}}}</a></h4>
      {{#subHeader}}
      <div class="teaser__subheading">{{subHeader}}</div>
      {{/subHeader}}
    </header>
    <div class="teaser__body">
      {{{content}}}
    </div>

  <footer class="teaser__footer">
    <div class="teaser__footer_text">
      {{#footerText}}{{{footerText}}}{{/footerText}}
      {{#date}}
        {{atoms-date}}
      {{/date}}
    </div>
    {{#downloadSrc}}
      <a href="{{downloadSrc}}" class="teaser__download"><span class="visuallyhidden">Download</span></a>
    {{/downloadSrc}}
  </footer>

</div>
