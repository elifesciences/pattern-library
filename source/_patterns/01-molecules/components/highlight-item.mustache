<li class="highlight-item" data-behaviour="HighlightItem">
   {{#image}}
   <picture class='highlight-item__picture'>
       {{#sources}}
       <source srcset='{{srcset}}'
               {{#type}} type='{{type}}' {{/type}}
               {{#media}} media='{{media}}' {{/media}}>
       {{/sources}}
       {{#fallback}}
       <img src='{{defaultPath}}'
            {{#srcset}} srcset='{{srcset}}' {{/srcset}}
            alt='{{altText}}'
            class='highlight-item__image' />
       {{/fallback}}
   </picture>
   {{/image}}

  <div class="highlight-item__body">
    <h2 class="highlight-item__title">
        <a href="{{url}}" class="highlight-item__title_link">{{{title}}}</a>
    </h2>

    {{#authors}}
    <div class="highlight-item__authors" id="{{elementId}}">{{{authors}}}</div>
    {{/authors}}

    {{#summary}}
    <details>
        <summary class="highlight-item__summary">{{{summary}}}</summary>
    </details>
    {{/summary}}

    {{#meta}}
    <div class="highlight-item__meta">
        {{> molecules-meta}}
    </div>
    {{/meta}}
  </div>
  
</li>
