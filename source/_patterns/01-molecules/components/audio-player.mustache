<div class="audio-player" data-behaviour="AudioPlayer"{{#metadata}}
  data-metadata="{{{metadata}}}"
{{/metadata}} >
  <div class="audio-player__container">
    <div class="audio-player__header">{{title}}</div>
    <audio class="audio-player__player" controls preload="metadata">
      {{#sources}}
      <source src="{{src}}" type="{{mimeType.forMachine}}">
      <div><a href="{{src}}" class="audio-player__link" rel="external" target="_blank">Download the podcast ({{mimeType.forHuman}})</a></div>
      {{/sources}}
    </audio>
  </div>
</div>
