<figure class="captioned-asset">

  {{#picture}}
  {{> atoms-picture }}
  {{/picture}}

  {{#image}}
    <img src="{{defaultPath}}"
         alt="{{altText}}"{{#srcset}}
         srcset="{{srcset}}"{{/srcset}}
      {{#classes}} class="{{classes}}"{{/classes}} />
  {{/image}}

  {{#video}}
    {{> atoms-video}}
  {{/video}}

  <figcaption class="captioned-asset__caption">
    {{#customContent}}
        {{{ customContent }}}
    {{/customContent}}
    {{^customContent}}
      {{#heading}}
        <p class="captioned-asset__caption_heading">{{{ heading }}}</p>
      {{/heading}}
      {{#captions}}
        <p class="captioned-asset__caption_text">{{ caption }}</p>
      {{/captions}}
    {{/customContent}}

    {{#doi}}
      {{> atoms-doi}}
    {{/doi}}

    {{#download}}
      <div class="captioned-asset__caption___footer">
        <a href="{{link}}" class="captioned-asset__caption___footer_link" target="_blank">Open in new tab</a>
      </div>
    {{/download}}

  </figcaption>

  {{#tables}}
    {{{.}}}
  {{/tables}}

</figure>
