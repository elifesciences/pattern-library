<div class="hero-banner-item" data-behaviour="HeroBannerItem">
    {{#subjects}}<ol class="hero-banner__subject_list">
        {{#subjects.list}}
        <li class="hero-banner__subject_list_item">
            <a href="{{url}}" class="hero-banner__subject_link">
                <span class="hero-banner__subject">{{{name}}}</span>
            </a>
        </li>
        {{/subjects.list}}
    </ol>
    {{/subjects}}
    {{#image}}
    <picture class='hero-banner__picture'>
        {{#sources}}
        <source srcset='{{srcset}}'
                {{#type}} type='{{type}}' {{/type}}
                {{#media}} media='{{media}}' {{/media}}>
        {{/sources}}
        {{#fallback}}
        <img src='{{defaultPath}}'
             {{#srcset}} srcset='{{srcset}}' {{/srcset}}
             alt='{{altText}}'
             class='hero-banner__image' />
        {{/fallback}}
    </picture>
    {{/image}}
    <section class="hero-banner__details">
        <h1 class="hero-banner__title">{{{title}}}</h1>
        <details>
            <summary class="hero-banner__summary">{{{summary}}}</summary>
        </details>

        {{#authors}}
        <div class="hero-banner__authors">
            {{> molecules-authors}}
        </div>

        {{/authors}}
        {{#meta}}
        <div class="hero-banner__meta">
            {{> molecules-meta}}
        </div>
        {{/meta}}

    </section>
</div>