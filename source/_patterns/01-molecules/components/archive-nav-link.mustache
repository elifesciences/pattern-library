<div class="archive-nav-link">

  {{#blockLink}}
    {{> atoms-block-link}}
  {{/blockLink}}

  <dl class="archive-nav-link__list">
    <dt class="archive-nav-link__sub_links_list_heading">{{label}}</dt>
