<div data-behaviour="ArticleDownloadLinksList" id="articleDownloadLinksList" aria-labelledby="articleDownloadLinksListLabel">
  <div class="visuallyhidden"><span id="articleDownloadLinksListLabel">{{{description}}}</span><!-- Consider skip link here for AT --></div>

  {{#groups}}
    <h3 class="article-download-links-list__heading">{{{title}}}</h3>
    <ul class="article-download-list">
      {{#items}}
       <li><a href="{{url}}" class="article-download-links-list__link">{{{name}}}</a></li>
      {{/items}}
    </ul>
  {{/groups}}

</div>
