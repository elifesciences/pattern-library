
<fieldset class="filter-group">
  <legend id="filter-group__title" class="filter-group__title">{{title}}</legend>

  <ul class="filter-group__filters" aria-labelledby="filter-group__title">
    {{#filters}}
    <li class="filter-group__filter_item">
      <label class="filter-group__item_label"><input type="checkbox" name="{{name}}" value="{{#value}}{{value}}{{/value}}{{^value}}1{{/value}}" {{#isChecked}}checked{{/isChecked}}> {{label}}</label>
      <span class="filter-group__results">({{results}})</span>
    </li>
    {{/filters}}
  </ul>
</fieldset>
