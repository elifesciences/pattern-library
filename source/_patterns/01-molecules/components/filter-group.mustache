
<fieldset class="filter-group">
  <legend id="filter-group__title" class="filter-group__title">{{title}}</legend>

  <ul class="filter-group__filters" aria-labelledby="filter-group__title">
    {{#filters}}
    <li class="filter-group__filter_item">
      <label class="filter-group__item_label"><input type="checkbox" class="filter-group__checkbox" name="{{name}}" value="{{#value}}{{value}}{{/value}}{{^value}}1{{/value}}" {{#isChecked}}checked{{/isChecked}}>{{label}} ({{results}}<span class="visuallyhidden"> results</span>)</label>
    </li>
    {{/filters}}
  </ul>
</fieldset>
