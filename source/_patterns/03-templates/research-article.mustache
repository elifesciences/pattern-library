<div class="global-wrapper">

  {{> organisms-site-header }}

  <main role="main">

    <article class="article">

      <!-- content header -->
      <div class="wrapper">
        <div style="background-color: #efefef; height: 400px">content header</div>
      </div>
      <!-- /content header -->

      <div class="wrapper">
      {{> molecules-contextual-data }}
      </div>

      <div class="wrapper">

        <div class="grid">

          <div class="grid__item large--three-twelfths u-pad-top">
            {{> molecules-view-selector }}
          </div>

          <div class="grid__item large--six-twelfths u-pad-top">
            <div>[abstract here]</div>
            <div style="background-color: #ddd; height: 500px"></div>

            {{#articlesections}}
              {{> molecules-article-section }}
            {{/articlesections}}

            <!-- May need to make the article section pattern more content flexible (include other patterns/not have header). New variants? -->
            <section class="article-section">

              <div class="article-section__body">
                {{> molecules-article-meta }}
              </div>

            </section>
          </div>

        </div>

      </div>
    </article>

  </main>

  {{> organisms-email-cta }}

  {{> organisms-footer }}

</div> <!-- /.global-wrapper -->
